                <textarea id="message" class="message-input" placeholder="Message" required></textarea>
            </div>
            <div class="btns">
                <button type="submit" id="send" class="send-chat-btn send">Send</button>
                <button type="reset" id="cancel" class="send-chat-btn cancel">Cancel</button>
            </div>
        </div>
    </form>
