<!--path to the file: views/users/edit_profile.ejs-->
<div>
    <div class="profile-form">
        <div class="profile-header">
            <h2>
                Edit Profile
            </h2>
            <div class="profile-details">
                <p>
                    <span>
                        Full Name:
                        <%= user.name %>
                    </span>
                    <span>
                        Email:
                        <%= user.email %>
                    </span>
                    <span>
                        Status:
                        <%= user.clientStatus %>
                    </span>
                </p>
            </div>
        </div>
        <form action="#" method="PUT" id="update_profile_form">
            <div class="form-grouper">
                <div class="input-group">
                    <label class="label" for="firstname">First Name</label>
                    <input type="text" name="firstname" id="firstname" value="<%= user.firstName %>" required>
                </div>
                <div class="input-group">
                    <label class="label" for="lastname">Last Name</label>
                    <input type="text" name="lastname" id="lastname" value="<%= user.lastName %>" required>
                </div>
            </div>
            <div class="input-group">
                <label class="label" for="email">Email</label>
                <input type="email" name="email" id="email" value="<%= user.email %>" required>
            </div>
            <div class="form-grouper">
                <div class="input-group">
                    <label class="label" for="phone">Phone</label>
                    <input type="text" name="phone" id="phone" value="<%= user.phone %>" required>
                </div>
                <div class="input-group">
                    <label class="label" for="address">Address</label>
                    <input type="text" name="address" id="address" value="<%= user.address %>" required>
                </div>
            </div>
            <div class="input-group">
                <label class="label" for="city">City</label>
                <input type="text" name="city" id="city" value="<%= user.city %>" required>
            </div>
            <div class="form-grouper">
                <div class="input-group">
                    <label class="label" for="gender">Gender</label>
                    <select name="gender" id="gender">
                        <option value="<%= user.gender %>">
                            <%= user.gender %>
                        </option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
                <div class="input-group">
                    <label class="label" for="dateofbirth">Date of
                        Birth<i>(mm/dd/yyy)</i></label>
                    <input type="date" name="dateofbirth" id="dateofbirth" value="<%= user.dateOfBirth %>" required>
                </div>
            </div>
            <div class="form-grouper">
                <div class="input-group">
                    <label class="label" for="accountType">Account Type</label>
                    <input type="text" value="<%= user.accountType %>" disabled>
                </div>
                <div class="input-group">
                    <label class="label" for="oldpassword">Password</label>
                    <input type="password" name="oldpassword" id="oldPassword" required>
                    <span class="showPassword" id="showOldPassword">Show</span>
                </div>
            </div>
            <div class="form-grouper">
                <div class="input-group">
                    <label class="label" for="password">New Password</label>
                    <input type="password" name="password" id="password">
                    <span class="showPassword" id="showNewPassword">Show</span>
                </div>
                <div class="input-group">
                    <label class="label" for="confirmpassword">Confirm Password</label>
                    <input type="password" name="confirmpassword" id="confirmpassword">
                    <span class="showPassword" id="showConfirmPassword">Show</span>
                </div>
            </div>
            <div class="input-group">
                <button type="submit" id="update_profile" class="btn">Update</button>
            </div>
        </form>
    </div>
</div>
<script src="/js/update_profile.js"></script>